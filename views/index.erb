<h1>List of all restaurants</h1>
<ul>
  <!-- itérer dans les restaurants -->
  <% @restaurants.each do |restaurant| %>
    <li>
      <!-- crée un lien qui va renvoyer vers la page de ton restau -->
      <a href="/restaurants/<%=restaurant.id %>">
        <%= restaurant.name %>
      </a>
    </li>
  <% end %>
</ul>

<h2>Create a restaurant</h2>
<form action="/restaurants" method="post">

  <label for="name">Name</label>
  <!-- on définit dans name="le nom de la variable d'instance" -->
  <input type="text" name="name">

  <label for="address">Address</label>
  <input type="text" name="address">

  <label for="rating">Rating</label>
  <input type="integer" name="rating">

  <input type="submit">
</form>
